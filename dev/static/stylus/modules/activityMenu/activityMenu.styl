.activity-menu
  padding 28px 98px 42px 50px
  display none
  justify-content space-between
  position absolute
  top 62px
  left 0
  max-width 854px
  width 100%
  background-color rgba(30, 32, 44, 0.95)
  z-index 2

  &.active
    display flex

  &__info
    position relative
    margin-right px

  &__image
    display flex
    justify-content flex-start

    .slick-list
      size(186px)

    .slick-dots
      padding 0

      li
        margin-bottom 6px
        display flex
        align-items flex-start
        text-align left

        &:last-child
          margin-bottom 0

        .activity-slider__dots
          position relative
          padding 0 0 0 45px
          background none
          border none
          height 18px
          color #eeeeee
          cursor pointer
          font-size 14px

          &:hover:after
            content ''
            position absolute
            top 50%
            left 0
            height 1px
            width 102%
            background-color #ec1e24
            transition all linear .5s

  &__discount
    padding 0
    width 270px
    display flex
    flex-direction column

    span
      font-family boldFont
      text-transform uppercase
      margin-bottom 22px

    p
      line-height 24px
      font-size 14px
      margin-bottom 15px

  &__email
    label
      display flex
      justify-content flex-start
    input
      padding 0 18px
      border none
      size(200px,38px)
      font-size 14px

      &::-moz-placeholder
          color #8e8e90
      &::-webkit-input-placeholder
          color #8e8e90

    button
      padding 0
      display flex
      justify-content center
      align-items center
      size(62px,38px)
      border 1px solid #ec1e24
      background-color #ec1e24
      margin 0
      cursor pointer
      transition all linear .5s

      &:hover
        background none

    .icon
      fill #fff
      size(24px,18px)
