.header-menu
  padding 22px 0px 26px 0px
  position fixed
  display flex
  flex-direction column
  justify-content space-between
  align-items flex-end
  top 64px
  right -342px
  background-color rgba(30, 32, 44, 0.95)
  min-width 342px
  height 630px
  transition all linear .5s
  z-index 2

  &__info
    display flex
    flex-direction column
    justify-content flex-start
    align-items flex-end
    width 100%

  &.active
    right 0
    position absolute

  &__title
    padding 0 50px 0 0
    color #eeeeee
    height 38px
    font-family rajdhaniBoldFont
    text-transform uppercase
    font-size 36px

  &__list
    // display none
    padding 35px 0 0px 0

    &.active
      display none

    li
      height 18px
      margin-bottom 8px
      text-align right
      font-size 14px

    .icon
      fill #ec1e24
      size(6px, 7px)
      margin-right 12px

  &__link
    position relative
    padding 0 50px 0 0
    height 18px
    color #ffffff

    &:hover:after
      content ''
      position absolute
      top 8px
      right 0
      height 1px
      width 100%
      background-color #ec1e24

  &__contacks
    padding 44px 50px 0 0

.menu-products
  display none
  width 100%

  &.active
    display block

  .menu-products__btn
    padding 20px 0 0 16px
    height 36px
    margin-bottom 8px
    text-align left

    button
      border none
      background none
      color #ffffff
      cursor pointer
      font-size 12px

    .icon
      fill #ec1e24
      size(6px, 7px)
      margin-right 6px
      transform rotate(180deg)

  &__item
    position relative
    padding-right 50px
    size(100%, 18px)
    margin-bottom 12px
    text-align right
    font-size 14px

    &:hover:after
      content ''
      position absolute
      top 49%
      left: 0
      height 1px
      width 85%
      background-color #ec1e24

  &__link
    height 18px
    padding 0
    color #ffffff


.menu-phone
  padding 0
  display flex
  flex-direction column
  text-align right
  color #86878d

  span
    padding 2px 0
    font-family boldFont
    font-size 14px

  a
    padding 2px 0
    font-size 14px
    color #86878d

.menu-social
  padding 18px 0 0 0
  display flex
  justify-content flex-end

  li
    padding 1px

  &__link
    display flex
    justify-content center
    align-items center
    size(28px)
    background-color #ffffff

    .icon
       fill #1e1e22
       size(20px)

    &--fb
      justify-content flex-end
      align-items flex-end

      .icon
        size(23px)
